# Day 1: Currency Converter
egp_amount = input("Enter amount in EGP: ")

if egp_amount.isdigit():
    amount = int(egp_amount)
    
    # Exchange rates (example - you can update these)
    usd_rate = 50
    sar_rate = 13
    aed_rate = 13.6
    
    print(f"\n{amount} EGP equals:")
    print(f"- {amount / usd_rate:.2f} USD")
    print(f"- {amount / sar_rate:.2f} SAR")
    print(f"- {amount / aed_rate:.2f} AED")
else:
    print("Please enter a valid number")
